<Page x:Class="Aklai.regin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Aklai"
      mc:Ignorable="d"
      Title="regin" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Введите логин в форме почты:" Margin="4"/>
        <TextBox x:Name="textBox_login" Height="19" Margin="4"/>
        <Label Content="Введите пароль:" Margin="4"/>
        <PasswordBox x:Name="password" Height="19" Margin="4"/>
        <Label Content="Повторите пароль:" Margin="4" />
        <PasswordBox x:Name="password_Copy" Height="19" Margin="4"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="reg" Click="reg_Click" Content="Регистрация" Width="100" Margin="4"/>
            <Button x:Name="back" Click="back_Click" Content="Отмена" Width="100" Margin="4"/>
        </StackPanel>
    </StackPanel>
    
</Page>
