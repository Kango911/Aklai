<Page x:Class="Aklai.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Aklai"
      mc:Ignorable="d"
      Title="login" Height="450" Width="800">
    <Grid>
        <Label Content="Введите логин:" HorizontalAlignment="Center" Margin="311,144,389,249"/>
        <TextBox x:Name="textBox_login" Height="19" Margin="311, 170, 281, 255"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Center" Margin="311,199,380,194"/>
        <PasswordBox x:Name="password" Height="19" Margin="311, 200, 281, 176"/>
        <Button x:Name="regin" Click="regin_Click" Content="Регистрация" HorizontalContentAlignment="Center" Margin="405, 255, 281, 176"/>
        <Button x:Name="enter" Click="enter_Click" Content="Войти" HorizontalContentAlignment="Center" Margin="311, 255, 400, 176"/>
        <Image Source="Images/Signature.png" Width="150" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</Page>
