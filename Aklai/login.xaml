<Page x:Class="Aklai.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Aklai"
      mc:Ignorable="d"
      Title="login" Height="450" Width="800">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите логин:" Margin="4"/>
            <TextBox x:Name="textBox_login" Height="19" Margin="4"/>
            <Label Content="Введите пароль:" Margin="4"/>
            <PasswordBox x:Name="password" Height="19" Margin="4"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="enter" Click="enter_Click" Content="Войти" Width="100" Margin="4"/>
                <Button x:Name="regin" Click="regin_Click" Content="Регистрация" Width="100" Margin="4"/>
            </StackPanel>
        </StackPanel>
</Page>
