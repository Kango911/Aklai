<Page x:Class="Aklai.regin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Aklai"
      mc:Ignorable="d"
      Title="regin" Height="450" Width="800">
    <Grid>
        <Label Content="Введите логин в форме почты:" HorizontalAlignment="Center" Margin="311,144,300,249"/>
        <TextBox x:Name="textBox_login"  Height="19" Margin="311, 170, 281, 255"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Center" Margin="311,199,380,194"/>
        <PasswordBox x:Name="password"  Height="19" Margin="311, 200, 281, 176"/>
        <Label Content="Повторите пароль:" HorizontalAlignment="Center" Margin="311,250,370,154" />
        <PasswordBox x:Name="password_Copy"  Height="19" Margin="311, 270, 281, 176"/>
        <Button x:Name="reg" Click="reg_Click" Content="Регистрация" HorizontalContentAlignment="Center" Margin="405, 315, 281, 115"/>
        <Button x:Name="back" Click="back_Click" Content="Отмена" HorizontalContentAlignment="Center" Margin="311, 315, 400, 115"/>
        <Image Source="Images/Signature.png" Width="150" Height="125" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>    
</Page>
